{
  "name": "cipherpay-sdk",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:browser": "tsup && cp dist/browser/index.global.js dist/browser/cipherpay-sdk.browser.js",
    "clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./chains/solana/*": "./dist/chains/solana/*.js",
    "./merkle/*": "./dist/merkle/*.js"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "circomlibjs": "^0.1.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "events": "^3.3.0",
    "readable-stream": "^4.7.0",
    "tsup": "^8.1.0",
    "typescript": "^5.6.3"
  }
}
