{
  "name": "cipherpay-sdk",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:browser": "tsup src/index.ts --format iife --global-name CipherPaySDK --out-dir dist/browser --minify && cp dist/browser/index.global.js dist/browser/cipherpay-sdk.browser.js",
    "clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./chains/solana/*": "./dist/chains/solana/*.js",
    "./merkle/*": "./dist/merkle/*.js"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "zod": "^3.23.8",
    "circomlibjs": "^0.1.7"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "tsup": "^8.1.0"
  }
}
